<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Horizontal bar of the plus sign -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="4dp" />
            <solid android:color="#000000" /> <!-- Change color as needed -->
        </shape>
    </item>

    <!-- Vertical bar of the plus sign -->
    <item>
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <size android:width="@dimen/_5sdp" android:height="4dp" />
                <solid android:color="#000000" /> <!-- Change color as needed -->
            </shape>
        </rotate>
    </item>
</layer-list>