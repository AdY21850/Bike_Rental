<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LL_cardveiw"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:background="@drawable/semicircle"
                    android:backgroundTint="#000">
                    <FrameLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/white">

                        <ImageView
                            android:id="@+id/circle_center_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bikewale1" />
                    </FrameLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/profilebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:src="@drawable/outline_account_circle_24" />

                        <TextView
                            android:id="@+id/drawer_profile_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Profile"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/Settingsbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:src="@drawable/outline_settings_24" />

                        <TextView
                            android:id="@+id/drawer_settings_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Settings"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/Notificationbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:src="@drawable/outline_notifications_24" />

                        <TextView
                            android:id="@+id/drawer_notifications_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Notification"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/privacybtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_vpn_key_24" />

                        <TextView
                            android:id="@+id/drawer_privacy_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Privacy"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/helpbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_10sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:src="@drawable/exclamation_mark" />

                        <TextView
                            android:id="@+id/drawer_help_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Help &amp; Support"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/logoutbtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rectangle2"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:backgroundTint="#2B4C59"
                   >
                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20ssp"
                        android:shadowColor="#000000"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:shadowRadius="10"

                       />
                </FrameLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>