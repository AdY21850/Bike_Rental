<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="@dimen/_39sdp"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/baseline_west_24" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/cart1"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_40ssp"
                android:fontFamily="@font/robotoslab_variablefont_wght"
                android:layout_marginLeft="@dimen/_25sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/profilebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:elevation="@dimen/_20sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/drawer_profile_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Profile Settings"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_25ssp"
                             />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                </FrameLayout>



                <FrameLayout
                    android:id="@+id/notificationbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:elevation="@dimen/_20sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/drawer_notifications_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Set Password"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_25ssp"
                             />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/privacybtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:elevation="@dimen/_20sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/drawer_privacy_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="Account"
                            android:layout_marginTop="@dimen/_10sdp"
                           android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_25ssp"
                          />
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/aboutbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle2"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:elevation="@dimen/_20sdp"
                    android:backgroundTint="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/drawer_help_txt"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotoslab_variablefont_wght"
                            android:text="About"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="#2B4C59"
                            android:textSize="@dimen/_25ssp"
                            />
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_arrow_forward_ios_24"/>
                    </LinearLayout>

                </FrameLayout>




            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>