<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Bike Image Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/semicircle"
            android:layout_weight="1"

            android:backgroundTint="@color/white"

         >

            <ImageView
                android:id="@+id/bike_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/duke" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/circle_background"
                android:src="@drawable/baseline_west_24"
                android:layout_alignParentStart="true" />
        </FrameLayout>

        <!-- Bike Name & Price -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="-50dp"
            android:background="@drawable/semicircle2"
            android:padding="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Bike Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_16sdp">

                    <TextView
                        android:id="@+id/bike_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Activa"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"
                        android:fontFamily="@font/bungee_regular"
                        android:textStyle="normal"
                        android:layout_marginLeft="@dimen/_10sdp"
                   />

                    <TextView
                        android:id="@+id/bike_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 300.00"
                        android:textSize="@dimen/_20ssp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <!-- Bike Attributes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <!-- Transmission -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:backgroundTint="@color/text_color2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transmission"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/bike_transmission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manual"
                            android:textSize="@dimen/_15ssp"

                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Speed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:backgroundTint="@color/text_color2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speed"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/bike_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110 km/h"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Mileage -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_card"
                        android:gravity="center"
                        android:backgroundTint="@color/text_color2"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mileage"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/bike_mileage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35 kmpl"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Owner Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/owner_image"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/profilepicturebikerental"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"
                        android:backgroundTint="@color/main_color"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Jane Smith"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/owner_email"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:src="@drawable/baseline_mail_24"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/circle_background"/>

                        <ImageView
                            android:id="@+id/owner_contact"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/baseline_call_24"
                            android:background="@drawable/circle_background"
                            android:layout_marginStart="@dimen/_8sdp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Quantity and Book Now -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_card"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/minus1"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/ic_minus"/>

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="1"
                            android:textSize="@dimen/_16ssp"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:id="@+id/plus1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_plus"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/book_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:backgroundTint="@android:color/black"
                        android:text="add to cart"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
