<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:background="@drawable/semicircle"
        android:backgroundTint="#838383">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_16sdp">

            <!-- Profile Picture Container -->
            <FrameLayout
                android:id="@+id/profileContainer"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/rectangle2"
                android:backgroundTint="#838383"
               >

                <!-- Profile Picture -->

                <ImageView
                    android:id="@+id/profilepicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/outline_account_circle_24" />

            </FrameLayout>

            <!-- Edit Profile Floating Button -->

            <!-- Name and Username Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/edit_profile"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignEnd="@id/profileContainer"
                android:layout_alignBottom="@id/profileContainer"
                android:layout_marginEnd="-23dp"
                android:layout_marginBottom="-17dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_edit_24"
                    android:tint="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileContainer"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <!-- Name -->
                <TextView
                    android:id="@+id/name12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee_regular"
                    android:includeFontPadding="false"
                    android:text="Aditya Sharma"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <!-- Username -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="aditya_sharma1204"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="-100dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_weight="2"
            app:cardElevation="@dimen/_15sdp"
            app:cardBackgroundColor="#838383"
            android:layout_marginTop="@dimen/_10sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:outlineAmbientShadowColor="@color/black"
                    android:src="@drawable/baseline_currency_rupee_24"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/rupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/bungee_regular"
                    android:layout_centerInParent="true"/>



                <TextView
                    android:id="@+id/rupeesdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Balance"
                    android:textSize="@dimen/_14ssp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rupees"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_weight="2"
            app:cardElevation="@dimen/_15sdp"
            app:cardBackgroundColor="#838383"
            android:layout_marginTop="@dimen/_10sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/note_3482520"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/bookingbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/bungee_regular"
                    android:layout_centerInParent="true"/>



                <TextView
                    android:id="@+id/booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Booking"
                    android:textSize="@dimen/_14ssp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/bookingbox"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="#2B4C59"
        android:gravity="left"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_below="@+id/vew1"
        android:layout_marginTop="0dp"

        android:textSize="@dimen/_15sdp"/>
    <EditText
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="jhon doe"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@+id/name"
        android:backgroundTint="#E5E5E5"/>
    <TextView
        android:id="@+id/phoneoremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email or Phone"
        android:textColor="#2B4C59"
        android:gravity="left"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_below="@+id/name1"
        android:layout_marginTop="0dp"

        android:textSize="@dimen/_15ssp"/>
    <EditText
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loremipsum@gmail.com"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@+id/phoneoremail"
        android:backgroundTint="#E5E5E5"/>


    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="#2B4C59"
        android:gravity="left"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_below="@+id/email1"
        android:layout_marginTop="0dp"
        android:textSize="@dimen/_15ssp"/>

    <EditText
        android:id="@+id/phone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:backgroundTint="#E5E5E5"
        android:hint="**********"
        android:inputType="number"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email1"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:gravity="left"
        android:text="Date Of Birth"
        android:textColor="#2B4C59"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/dateofbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:hint="dd-mm-yy"
        android:drawableEnd="@drawable/outline_remove_red_eye_24"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:layout_below="@+id/password"
        android:backgroundTint="#E5E5E5"/>

    <TextView
        android:id="@+id/dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driving Licence Number"
        android:textColor="#2B4C59"
        android:gravity="left"
        android:fontFamily="@font/robotoslab_variablefont_wght"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_below="@+id/password1"
        android:layout_marginTop="0dp"
        android:textSize="@dimen/_15sdp"/>

    <EditText
        android:id="@+id/dl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:hint="*******"
        android:drawableEnd="@drawable/outline_remove_red_eye_24"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:layout_below="@+id/dl"
        android:backgroundTint="#E5E5E5"/>



    <FrameLayout
        android:id="@+id/move_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle2"
        android:layout_below="@+id/dl1"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:backgroundTint="#2B4C59"
        android:layout_marginTop="@dimen/_25sdp"
        >
        <TextView
            android:id="@+id/move_to_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="@font/inter_medium"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>
</LinearLayout>



</ScrollView>