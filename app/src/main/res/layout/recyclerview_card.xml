<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_150sdp"

    android:layout_marginTop="@dimen/_5sdp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image123"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/duke"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                >

                <TextView
                    android:id="@+id/bikename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/robotoslab_variablefont_wght"
                    android:text="DUKE"
                    android:textAlignment="center"
                    android:textColor="#2B4C59"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/costLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@id/bikename"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:fontFamily="@font/robotoslab_variablefont_wght"
                        android:text="$350"
                        android:textColor="#2B4C59"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/perday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslab_variablefont_wght"
                        android:text="/day"
                        android:textColor="#2B4C59"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="italic"/>
                </LinearLayout>




            </RelativeLayout>
            <LinearLayout
                android:id="@+id/likeLL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/costLL"
                android:gravity="end"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/like"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"

                    android:src="@drawable/outline_heart_check_24" />

                <ImageView
                    android:id="@+id/arrowright"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_arrow_circle_right_24" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>







</androidx.constraintlayout.widget.ConstraintLayout>

